
<div class="container">
  <h3>Schuelers</h3>
  <table class="table">
    <col class="col-sm-1">
    <col class="col-sm-1">
    <col class="col-sm-1">
    <col class="col-sm-1">
    <col class="col-sm-1">
    <col class="col-sm-1">
    <col class="col-sm-1">
    <col class="col-sm-1">
    <col class="col-sm-1">
    <col class="col-sm-1">
    <col class="col-sm-1">
    <col class="col-sm-1">
    <tr>
      <th>Nr</th>
      <th>FLIGHT</th>
      <th>NAME</th>
      <th>FIRST</th>
      <th>EMAIL</th>
      <th>AGE</th>
      <th>SEX</th>
      <th>PASSPORT</th>
      <th>BIRTH</th>
      <th>RATED</th>
      <th>EDIT</th>
      <th>DESTROY</th>
    </tr>
    <% @schuelers.each do |p| %>
      <tr>
        <td><%= p.id*9776 %></td>
        <td><%=@klasse.find(p.klasse_id).klassenname%></td>
        <td><%= p.name %></td>
        <td><%= p.firstname %></td>
        <td><%= p.email %></td>
        <td><%= p.age %></td>
        <td><%if p.sex %>
            FEMALE
          <%else%>
            MALE
          <%end%></td>
        <td><%= p.des1 %></td>
        <td><%= p.des2 %></td>
        <td>
          <% if p.des3=="WANTED"%>
            <font color="red"><strong><%= p.des3 %><br /> Police is coming!</strong></font>
          <%else%>
          <%= p.des3 %>
        <%end%></td>
        <td><%= link_to "Edit", edit_schueler_path(p) , class: "btn btn-success"%></td>
        <td><%= link_to "Löschen", schueler_path(p), method: :delete, data: { confirm: "DESTROY PERSON?" } , class: "btn btn-danger"%></td>
      </tr>
    <% end %>
    <tr><td colspan="2">NUMBER OF schuelers: </td><td colspan="10"><%= @NumberOfSchuelers %></td></tr>
    <tr><td colspan="2">AVERAGE AGE: </td><td colspan="10"><%= @AverageAge %></td></tr>
    <tr><td colspan="2">FLIGHT: </td><td colspan="8">
      <%@klasse.all.each do |g|%>

          <%i=0%>
        <%@schuelers.all.each do |pp|%>
            <%if pp.klasse_id==g.id%>
                <%i=i+1%>
            <%end%>
          <%end%>
           <%=i%> PASSENGERS ON <%=g.klassenname%><br>
      <%end%>


     </td></tr>
  </table>
  <h4>
    <%= link_to "ADD Schüler", new_schueler_path, class: "btn btn-success"%>
    <%= link_to "Klassen ", klassen_index_path , class: "btn btn-success"%>
  </h4>
</div>
